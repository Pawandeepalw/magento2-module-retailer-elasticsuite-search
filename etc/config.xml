<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <smile_elasticsuite_autocomplete_settings>
            <retailer_autocomplete>
                <max_size>5</max_size>
            </retailer_autocomplete>
        </smile_elasticsuite_autocomplete_settings>

        <smile_elasticsuite_retailer>
            <retailer_settings>
                <max_result>5</max_result>
                <enabled>1</enabled>
            </retailer_settings>
            <retailer_field_index>
                <street>1</street>
                <postcode>1</postcode>
                <latitude>1</latitude>
                <longitude>1</longitude>
                <name>1</name>
                <description>1</description>
            </retailer_field_index>
        </smile_elasticsuite_retailer>
    </default>
</config>
